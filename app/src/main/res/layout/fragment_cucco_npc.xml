<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="NestedWeights">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:id="@+id/cucco_npc_background_linear_layout">

        <ImageView
            android:id="@+id/cucco_npc_card_image_view"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical|end"
            android:contentDescription="@string/cucco_card_image_description"
            android:src="@drawable/one"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cucco_npc_face_image_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2.0"
                android:scaleType="fitEnd"
                android:adjustViewBounds="true"
                android:contentDescription="@string/cucco_face_image_description"
                android:src="@drawable/flandre_normal_face"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"/>

            <TextView
                android:id="@+id/cucco_npc_coins_text_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:lines="1"
                android:textColor="@color/black"
                android:gravity="top"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:text="100 Coins" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>